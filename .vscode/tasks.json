{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "watch",
			"path": "packages/vscode-extension",
			"group": "build",
			"problemMatcher": {
        "base": "$tsc-watch",
        "background": {
          "beginsPattern": {
            "regexp": "^start rebuild$"
          },
          "endsPattern": {
            "regexp": "^rebuild done$"
          }
        }
      },
			"label": "npm: watch - packages/vscode-extension",
			"isBackground": true,
      
		}
	]
}