{
  "name": "rslint",
  "displayName": "rslint",
  "description": "Language support for Rslint",
  "version": "0.0.1",
  "publisher": "rstack",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/web-infra-dev/rslint"
  },
  "categories": [
    "Linters"
  ],
  "keywords": [
    "rslint",
    "linter",
    "typescript",
    "go"
  ],
  "engines": {
    "vscode": "^1.74.0"
  },
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:typescriptreact",
    "onLanguage:javascript",
    "onLanguage:javascriptreact"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "rslint",
      "properties": {
        "rslint.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable rslint"
        },
        "rslint.binPath": {
          "type": "string",
          "description": "Path to rslint executable"
        },
        "rslint.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run build",
    "prepare": "rm -rf out && mkdir -p ./out && cp ../rslint/bin/rslint ./out/rslint",
    "build": "npm run prepare && node scripts/build.js",
    "watch": "npm run prepare && tsc -watch -p ./",
    "package": "vsce package --dependencies",
    "prepackage": "pnpm build",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@rslint/core": "workspace:*",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.74.0",
    "esbuild": "0.25.7",
    "typescript": "^5.0.0",
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12"
  }
}
