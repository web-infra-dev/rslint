[
  {
    "language": "typescript",
    "files": ["**/*.ts"],
    "languageOptions": {
      "parserOptions": {
        "projectService": false,
        "project": ["./tsconfig.json"]
      }
    },
    "rules": {
      "@typescript-eslint/prefer-nullish-coalescing": [
        "error",
        {
          "ignoreMixedLogicalExpressions": true
        }
      ]
    },
    "plugins": ["@typescript-eslint"]
  }
]
